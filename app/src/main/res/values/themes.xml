<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WeFridge" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/fern_green</item>
        <item name="colorPrimaryVariant">@color/salmon_orange</item>
        <item name="colorOnPrimary">@color/pure_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow_green</item>
        <item name="colorSecondaryVariant">@color/light_ivory</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.WeFridge.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.WeFridge.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.WeFridge.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>